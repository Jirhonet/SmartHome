@using SmartHome.Models
@using SmartHome.Services

<div class="modal fade @(IsVisible ? "show" : "")" style="display: @(IsVisible ? "grid" : "none")" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(Room?.Id == 0 ? "New Room" : "Edit Room")</h5>
                <button type="button" class="btn-close" @onclick="OnClose"></button>
            </div>
            <div class="modal-body">
                @if (Room != null)
                {
                        <EditForm Model="@Room" OnValidSubmit="HandleSave">
                            <DataAnnotationsValidator />
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <InputText id="name" class="form-control" @bind-Value="Room.Name" />
                            </div>
                            <div class="text-end">
                                <button type="button" class="btn btn-secondary" @onclick="OnClose">Cancel</button>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </EditForm>
                }
            </div>
        </div>
    </div>
</div>